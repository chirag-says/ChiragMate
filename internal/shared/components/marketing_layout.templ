package components

templ MarketingLayout(title string) {
	<!DOCTYPE html>
	<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<meta name="description" content="BudgetMate - The first Offline-First Financial Operating System for Indian families. Privacy-centric family finance dashboard."/>
		<meta name="keywords" content="family finance, budget tracker, Indian finance app, privacy first, offline finance"/>
		<title>{ title } | BudgetMate</title>
		
		<!-- Open Graph -->
		<meta property="og:title" content="BudgetMate - Family Financial OS"/>
		<meta property="og:description" content="The first Offline-First Financial Operating System for Indian families."/>
		<meta property="og:type" content="website"/>
		
		<!-- Tailwind CSS -->
		<script src="https://cdn.tailwindcss.com"></script>
		<script>
			tailwind.config = {
				theme: {
					extend: {
						fontFamily: {
							sans: ['Inter', 'system-ui', 'sans-serif'],
						},
					}
				}
			}
		</script>
		
		<!-- Google Fonts - Inter -->
		<link rel="preconnect" href="https://fonts.googleapis.com"/>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet"/>
		
		<style>
			/* Smooth animations */
			.fade-in {
				animation: fadeIn 0.6s ease-out forwards;
			}
			@keyframes fadeIn {
				from { opacity: 0; transform: translateY(20px); }
				to { opacity: 1; transform: translateY(0); }
			}
			
			/* Gradient text */
			.gradient-text {
				background: linear-gradient(135deg, #10b981 0%, #059669 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			
			/* Card hover */
			.bento-card {
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}
			.bento-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.1);
			}
		</style>
	</head>
	<body class="bg-gradient-to-b from-slate-50 to-white font-sans antialiased">
		<!-- Navigation -->
		@NavBar()
		
		<!-- Main Content -->
		<main>
			{ children... }
		</main>
		
		<!-- Footer -->
		@Footer()
	</body>
	</html>
}

templ NavBar() {
	<nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-slate-100">
		<div class="max-w-6xl mx-auto px-6">
			<div class="flex items-center justify-between h-16">
				<!-- Logo -->
				<a href="/" class="flex items-center gap-3">
					<div class="w-9 h-9 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center">
						<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
						</svg>
					</div>
					<span class="text-lg font-semibold text-slate-900">BudgetMate</span>
				</a>
				
				<!-- Nav Links -->
				<div class="hidden md:flex items-center gap-8">
					<a href="#features" class="text-sm text-slate-600 hover:text-slate-900 transition-colors">Features</a>
					<a href="#pricing" class="text-sm text-slate-600 hover:text-slate-900 transition-colors">Pricing</a>
					<a href="#about" class="text-sm text-slate-600 hover:text-slate-900 transition-colors">About</a>
				</div>
				
				<!-- CTA -->
				<div class="flex items-center gap-4">
					<a href="/app" class="text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors">
						Login
					</a>
					<a href="/app" class="px-4 py-2 bg-slate-900 text-white text-sm font-medium rounded-lg hover:bg-slate-800 transition-colors">
						Get Started
					</a>
				</div>
			</div>
		</div>
	</nav>
}

