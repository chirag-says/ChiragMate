	<footer class="bg-slate-900 text-white mt-24">
		<div class="max-w-6xl mx-auto px-6 py-16">
			<div class="grid grid-cols-1 md:grid-cols-4 gap-12">
				<!-- Brand -->
				<div class="md:col-span-2">
					<div class="flex items-center gap-3 mb-4">
						<img src="/assets/icon.png" class="h-10 w-10" alt="BudgetMate"/>
						<span class="text-xl font-bold text-white">BudgetMate</span>
					</div>
					<p class="text-slate-400 text-sm max-w-sm">
						The first Offline-First Financial Operating System built for Indian families. Your data, your control.
					</p>
				</div>
				<!-- Links -->
				<div>
					<h4 class="font-semibold text-sm mb-4">Product</h4>
					<ul class="space-y-3">
						<li><a href="#features" class="text-slate-400 text-sm hover:text-white transition-colors">Features</a></li>
						<li><a href="#pricing" class="text-slate-400 text-sm hover:text-white transition-colors">Pricing</a></li>
						<li><a href="/app" class="text-slate-400 text-sm hover:text-white transition-colors">Dashboard</a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-semibold text-sm mb-4">Legal</h4>
					<ul class="space-y-3">
						<li><a href="#" class="text-slate-400 text-sm hover:text-white transition-colors">Privacy Policy</a></li>
						<li><a href="#" class="text-slate-400 text-sm hover:text-white transition-colors">Terms of Service</a></li>
					</ul>
				</div>
			</div>
			<div class="border-t border-slate-800 mt-12 pt-8 flex flex-col md:flex-row items-center justify-between gap-4">
				<p class="text-slate-500 text-sm">Â© 2024 BudgetMate. Made with care in India.</p>
				<div class="flex items-center gap-4">
					<span class="text-slate-500 text-sm">Built for families who value privacy</span>
				</div>
			</div>
		</div>
	</footer>
}
