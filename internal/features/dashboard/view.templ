package dashboard

import (
	"fmt"
	"github.com/budgetmate/web/internal/database"
	"github.com/budgetmate/web/internal/shared/components"
)

templ DashboardPage(balance float64, transactions []database.Transaction) {
	@components.Layout("Dashboard") {
		<!-- Header -->
		<div class="mb-8">
			<h1 class="text-2xl font-bold text-slate-800">Welcome back! ðŸ‘‹</h1>
			<p class="text-slate-500 mt-1">Here's your financial overview at a glance</p>
		</div>
		
		<!-- Stats Grid -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
			@components.StatCard("Total Balance", components.FormatINR(balance), "Updated just now", balance >= 0)
			@IncomeCard(transactions)
			@ExpenseCard(transactions)
		</div>
		
		<!-- Recent Transactions -->
		<div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
			<div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between">
				<h3 class="text-sm font-semibold text-slate-800">Recent Transactions</h3>
				<a href="/transactions" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">View all â†’</a>
			</div>
			<div id="transaction-list">
				@TransactionList(transactions)
			</div>
		</div>
	}
}

templ IncomeCard(transactions []database.Transaction) {
	{{
		var total float64
		for _, t := range transactions {
			if t.Type == "income" {
				total += t.Amount
			}
		}
	}}
	<div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6 card-hover">
		<div class="flex items-start justify-between">
			<div>
				<p class="text-sm font-medium text-slate-500">Total Income</p>
				<p class="text-3xl font-bold mt-2 text-emerald-600">{ components.FormatINR(total) }</p>
				<p class="text-sm text-slate-500 mt-1">This period</p>
			</div>
			<div class="w-12 h-12 rounded-2xl flex items-center justify-center bg-emerald-50">
				<svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
				</svg>
			</div>
		</div>
	</div>
}

templ ExpenseCard(transactions []database.Transaction) {
	{{
		var total float64
		for _, t := range transactions {
			if t.Type == "expense" {
				total += t.Amount
			}
		}
	}}
	<div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6 card-hover">
		<div class="flex items-start justify-between">
			<div>
				<p class="text-sm font-medium text-slate-500">Total Expenses</p>
				<p class="text-3xl font-bold mt-2 text-rose-500">{ components.FormatINR(total) }</p>
				<p class="text-sm text-slate-500 mt-1">This period</p>
			</div>
			<div class="w-12 h-12 rounded-2xl flex items-center justify-center bg-rose-50">
				<svg class="w-6 h-6 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
				</svg>
			</div>
		</div>
	</div>
}

templ TransactionList(transactions []database.Transaction) {
	<div class="divide-y divide-slate-100">
		for _, t := range transactions {
			@TransactionRow(t)
		}
		if len(transactions) == 0 {
			<div class="p-8 text-center">
				<p class="text-slate-500">No transactions yet</p>
			</div>
		}
	</div>
}

templ TransactionRow(t database.Transaction) {
	<div 
		id={ fmt.Sprintf("transaction-%d", t.ID) }
		class="px-6 py-4 flex items-center justify-between hover:bg-slate-50 cursor-pointer transition-colors"
		hx-get={ fmt.Sprintf("/transactions/%d/edit", t.ID) }
		hx-target={ fmt.Sprintf("#transaction-%d", t.ID) }
		hx-swap="outerHTML"
	>
		<div class="flex items-center gap-4">
			<div class={ "w-10 h-10 rounded-xl flex items-center justify-center",
				templ.KV("bg-emerald-50", t.Type == "income"),
				templ.KV("bg-rose-50", t.Type == "expense") }>
				if t.Type == "income" {
					<svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
					</svg>
				} else {
					<svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
					</svg>
				}
			</div>
			<div>
				<p class="text-sm font-medium text-slate-800">{ t.Description }</p>
				<p class="text-xs text-slate-500">{ t.Category } â€¢ { t.Date.Format("Jan 02, 2006") }</p>
			</div>
		</div>
		<div class="text-right">
			<p class={ "text-sm font-semibold",
				templ.KV("text-emerald-600", t.Type == "income"),
				templ.KV("text-rose-500", t.Type == "expense") }>
				if t.Type == "income" {
					+{ components.FormatINR(t.Amount) }
				} else {
					-{ components.FormatINR(t.Amount) }
				}
			</p>
			<p class="text-xs text-slate-400">Click to edit</p>
		</div>
	</div>
}

templ TransactionEditRow(t database.Transaction) {
	<form 
		id={ fmt.Sprintf("transaction-%d", t.ID) }
		class="px-6 py-4 bg-slate-50 border-l-4 border-emerald-500"
		hx-post={ fmt.Sprintf("/transactions/%d", t.ID) }
		hx-target={ fmt.Sprintf("#transaction-%d", t.ID) }
		hx-swap="outerHTML"
	>
		<div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
			<div>
				<label class="block text-xs font-medium text-slate-600 mb-1">Description</label>
				<input 
					type="text" 
					name="description" 
					value={ t.Description }
					class="w-full px-3 py-2 text-sm border border-slate-300 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none"
				/>
			</div>
			<div>
				<label class="block text-xs font-medium text-slate-600 mb-1">Amount</label>
				<input 
					type="number" 
					name="amount" 
					value={ fmt.Sprintf("%.2f", t.Amount) }
					step="0.01"
					class="w-full px-3 py-2 text-sm border border-slate-300 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none"
				/>
			</div>
			<div>
				<label class="block text-xs font-medium text-slate-600 mb-1">Category</label>
				<input 
					type="text" 
					name="category" 
					value={ t.Category }
					class="w-full px-3 py-2 text-sm border border-slate-300 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none"
				/>
			</div>
			<div class="flex gap-2">
				<button 
					type="submit"
					class="flex-1 px-4 py-2 bg-emerald-600 text-white text-sm font-medium rounded-xl hover:bg-emerald-700 transition-colors"
				>
					Save
				</button>
				<button 
					type="button"
					class="px-4 py-2 bg-slate-200 text-slate-700 text-sm font-medium rounded-xl hover:bg-slate-300 transition-colors"
					hx-get={ fmt.Sprintf("/transactions/%d/view", t.ID) }
					hx-target={ fmt.Sprintf("#transaction-%d", t.ID) }
					hx-swap="outerHTML"
				>
					Cancel
				</button>
			</div>
		</div>
	</form>
}
